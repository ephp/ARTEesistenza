<!-- SIDEBAR -->
<div class="sidebar three columns">
    <h2 class="sb-header">{{ 'text.last_posts'|trans({}, 'EphpBlogBundle') }}</h2>
    {% for entity in lasts %}
    <p>
        <a href="{{ path('blog_show', { 'slug': entity.slug }) }}">
            <div class="postdate" style="margin-right: 5px;">
                <h3>{{ entity.createdAt|date('d') }}</h3>
                <h6>{{ ('month.s'~entity.month)|trans({}, 'EphpBlogBundle') }} {{ entity.year }}</h6>
            </div>
            <strong>{{ entity.title }}</strong><br>
            <small>scritto da {{ entity.user.username }}</small>
        </a> 
    </p>
    {% endfor %}
    <div class="divider3"></div>
    <h2 class="sb-header">{{ 'text.categories'|trans({}, 'EphpBlogBundle') }}</h2>
    <div class="list-type-sidebar">
        <ul>
            {% for category in categories %}
                <li><a href="{{ path('blog_category', {'name': category.name|lower}) }}">{{ category.name }} ({{ category.n }} {{ 'text.sposts'|trans({}, 'EphpBlogBundle') }})</a></li>
            {% endfor %}
        </ul>
    </div>
    <div class="divider3"></div>
    <h2 class="sb-header">{{ 'text.archive'|trans({}, 'EphpBlogBundle') }}</h2>
    <div class="list-type-sidebar">
        <ul>
            {% for archive in archives %}
                <li><a href="{{ path('blog_archive', {'month': archive.month, 'year': archive.year}) }}">{{ ('month.m'~archive.month)|trans({}, 'EphpBlogBundle') }} {{ archive.year }} ({{ archive.n }} {{ 'text.sposts'|trans({}, 'EphpBlogBundle') }})</a></li>
            {% endfor %}
        </ul>
    </div>
</div>
<!-- END SIDEBAR --> 
